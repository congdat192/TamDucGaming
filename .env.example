# Supabase - Lấy từ Project Settings > API
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# App
NEXT_PUBLIC_BASE_URL=http://localhost:3000
JWT_SECRET=your-secret-key-change-this-in-production

# Mock OTP (set false để dùng OTP thật qua VIHAT SMS)
MOCK_OTP_ENABLED=true

# VIHAT SMS API (eSMS) - Lấy từ https://esms.vn
# Để gửi OTP thật, set MOCK_OTP_ENABLED=false và điền thông tin bên dưới
VIHAT_API_KEY=your-vihat-api-key
VIHAT_SECRET_KEY=your-vihat-secret-key
VIHAT_BRANDNAME=MKTAMDUC
